<% include ../partials/header %>
<div class="container mt-5 mb-5">
    <form action="/trips/<%= trip._id %>/edit?_method=PUT" method="POST">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Name Of Trip</label>
                    <input class="form-control" value="<%= trip.name %>" type="text" name="trips[name]">
                </div>
                <div class="form-group">
                    <label>Location</label>
                    <input class="form-control" value="<%= trip.location %>" type="text" name="trips[location]">
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input type="text" class="form-control" value="<%= trip.image %>" name="trips[image]">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" name="trips[description]" cols="30"
                        rows="10"><%= trip.description %></textarea>
                </div>
            </div>
        </div>
        <input class="btn btn-outline-success" type="submit" value="Save">
    </form>
</div>
<% include ../partials/footer %>